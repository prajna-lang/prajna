use gpu;

test::Assert(cuda::cuInit(0i32) == 0i32);
var count: i32;
test::Assert(cuda::cuDeviceGetCount(&count) == 0i32);
"device count is : " + count.ToString() + "\n";
var mp_count: i32;
test::Assert(cuda::cuDeviceGetAttribute(&mp_count, 16i32, 0i32) == 0i32);
"multi processor count is " + mp_count.ToString() + "\n";
var max_thread_per_block: i32;
test::Assert(cuda::cuDeviceGetAttribute(&max_thread_per_block, 1i32, 0i32) == 0i32);
"Max thread: " + max_thread_per_block.ToString() + "\n";

gpu::Init();

"Max thread per block: " + gpu::MaxThreadPerBlock(0).ToString() + "\n";
"multi processors count: " +  gpu::MultiProcessorsCount(0).ToString() + "\n";
