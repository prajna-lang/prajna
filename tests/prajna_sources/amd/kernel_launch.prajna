use ::gpu2;

@kernel
@target("amdgpu")
func myKernel(tensor: gpu2::Tensor<i64, 1>, value: i64){
    var idx = gpu2::ThreadIndex()[0];
    tensor[idx] = value;
}

@test
func TestKernel(){
    var GridShape = [1,1,1];
    var BlockShape = [1,1,1];

    var shape = [1];
    var host_tensor = Tensor<i64, 1>::Create(shape);
    var gpu_tensor = host_tensor.ToGpu();
    var parameters: array<ptr<i8>, 2>;
    parameters[0] = bit_cast<ptr<gpu2::Tensor<i64, 1>> ,ptr<i8>>(&gpu_tensor);
    var value = 1023;
    parameters[1] = bit_cast<ptr<i64> ,ptr<i8>>(&value);
    var parameters_ptr = &parameters[0];

    var re = gpu2::LaunchKernel(bit_cast<function<gpu2::Tensor<i64, 1>, i64, void> ,ptr<i8>>(myKernel), GridShape, BlockShape, parameters_ptr);
    test::AssertWithMessage(re == 0, re.ToString());

    host_tensor = gpu_tensor.ToHost();
    test::Assert(host_tensor[0] == 1023);
}
